# Calculus RAG Configuration

# Environment
ENVIRONMENT=development

# Embedding Model
EMBEDDING_MODEL_NAME=BAAI/bge-base-en-v1.5
EMBEDDING_DEVICE=cpu

# Vector Store (PostgreSQL + pgvector)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=calculus_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
VECTOR_DIMENSION=768

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-math:7b
OLLAMA_REQUEST_TIMEOUT=120

# Cloud LLM (for complex queries - avoids heavy local 7B model)
CLOUD_LLM_ENABLED=false
CLOUD_LLM_PROVIDER=openrouter  # Options: "openrouter", "deepseek", "ollama-cloud"
CLOUD_LLM_API_KEY=your-api-key-here
CLOUD_LLM_MODEL=deepseek/deepseek-chat  # For openrouter. For ollama-cloud: "deepseek-v3.1:671b-cloud"
CLOUD_LLM_TIMEOUT=180

# Knowledge Base
KNOWLEDGE_BASE_PATH=./knowledge_content
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Student Database
STUDENT_DB_PATH=./data/student.db

# API
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
